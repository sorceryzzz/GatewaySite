
@{
    ViewBag.Title = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w1000">
    <div class="w1050">
        <!------------------------->
        <!-- tab标签代码begin -->
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="outer">


            <ul class="tab">
                <li>
                    <h2>@ViewData.Model.Title</h2>
                </li>
            </ul>
            <ul>
                <li>
                    <h3>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        @ViewData.Model.Content
                    </h3>
                </li>
            </ul>

            <table border="0" cellpadding="0" cellspacing="0" height="809">
                <tbody>
                    <tr>
                        @if (ViewData.Model.ImageUrl != null)
                        {
                            foreach (var imgItem in ViewData.Model.ImageUrl.Split(new char[] { ';' }))
                            {
                                <td align="middle">
                                    <img alt="" src="@imgItem" /><br />
                                </td>
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
